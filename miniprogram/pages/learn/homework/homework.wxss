  display: flex;
}



.tabBorer {
  border-bottom: 1px solid #6cf;
  color:  #6cf;
}

.swiper {
  width: 100%;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 50%;
  padding: 80rpx 0;
}
 
.image1{
  float:left;
  width: 80px;
  height: 80px;
  overflow: hidden;
  margin-left: auto 0;
    }

.pic1{
  width:100%;
  position: fixed;
  display: flex;
  bottom:0;
  padding:10rpx;
  margin-left:-4rpx;
  background:#F7F7FA;
