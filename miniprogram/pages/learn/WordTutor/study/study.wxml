<view wx:if="{{cpt}}" class="cpt">
  <view class="cpt_top">
    <view class="cpt_text">
      <view class="bigtext">
        {{today_num}}</view>
      学习单词
    </view>
    <view class="cpt_text">
      <view class="bigtext">
        {{keep_study}}</view>
      坚持天数
    </view>
  </view>
  <canvas canvas-id="pieCanvas" class="canvas" style="height:320px;width:100vw;z-index:1;"></canvas>
  <button open-type="share" id="{{id2}}" style="width:110rpx;height:90rpx;margin:0 auto;margin-top:20rpx;">
    <image src="cloud://it-cloud-hdrd7.6974-it-cloud-hdrd7-1300036058/image/learn/分享.png" style="width:90rpx;height:100%;margin:0 auto;"></image>
  </button>
</view>

<view wx:else>

  <view wx:if="{{!(showNot)}}" class="job_day">
    <view class="day_num">{{content}}</view>
    <view class="pron-container">
      <image class="pron-icon" bindtap="read" id="{{pron_audio.us[0]}}" src="/images/main.png"></image>
      <text class="word-pron" bindtap="read" id="{{pron_audio.us[0]}}">/{{pron.uk}}/</text>
    </view>

  </view>

  <view wx:if="{{showNot}}" class="detail_card">
    <view class='page'>

      <view class="head">
        <view class="detail_word">{{content}}</view>
        <view class="detail_pron">
          <image bindtap="read" style="width: 20px; height: 20px; " mode="scaleToFill" src="/images/main.png" id="{{pron_audio.uk[0]}}"></image>
          <view bindtap="read" id="{{pron_audio.uk[0]}}">英/{{pron.uk}}/</view>
          <image bindtap="read" id="{{pron_audio.us[0]}}" style="width: 20px; height: 20px; " mode="scaleToFill" src="/images/main.png"></image>
          <view bindtap="read" id="{{pron_audio.us[0]}}">美/{{pron.us}}/</view>
        </view>
        <view style="width:80%;font-size: 14px;font-family: Songti TC;padding-bottom: 6px;">{{definition}}</view>
      </view>



      <view class="body">
        <view class="liju_content">
          <view class="detail_defin">{{defen[0].first}}
            <view style="color:red;display:inline;"> {{defen[0].mid}} </view>{{defen[0].last}}</view>
          <view class="detail_trans">{{defen[0].translation}}</view>
          <view style="padding-bottom:20px;"></view>
          <view class="detail_defin">{{defen[2].first}}
            <view style="color:red;display:inline;"> {{defen[2].mid}} </view>{{defen[2].last}}</view>
          <view class="detail_trans">{{defen[2].translation}}</view>
          <view style="padding-bottom:20px;"></view>
          <view class="detail_defin">{{defen[3].first}}
            <view style="color:red;display:inline;"> {{defen[3].mid}} </view>{{defen[3].last}}</view>
          <view class="detail_trans">{{defen[3].translation}}</view>
        </view>


        <view class="ok">
          <button class='myButton1' bindtap="next">认识</button>
          <button class='myButton2' bindtap='mohu'>模糊</button>
          <button class='myButton3' bindtap='forget'>忘记</button>
        </view>
      </view>


      <view class="body">
        <button open-type="share" style="width: 20px; height: 20px;" class="zf" id="{{id1}}">
          <image class="zf" style="width: 20px; height: 20px;" catchtap="handlezfTap" mode="scaleToFill" src="/images/zf.png"></image>
        </button>
      </view>
    </view>
  </view>


  <view wx:if="{{!(showNot)}}" class="content" bindtap='show'>
    <view class='detect'>
      <view>大声把英文发音和中文解释说出口！</view>
      <view style='color: #83c41a;;'>点击屏幕查看答案</view>
    </view>
    <view class='ok'>
      <view class='bottomline'>{{bottomline}}</view>
    </view>
  </view>
</view>