.book-content {
  margin-top: 10rpx;
}

.book-list {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
  /* margin-top: 20rpx; */
  background-color: #fff;
  border: 0;
  border-radius: 15px;
}

.book-image {
  flex: 0 0 32%;
  box-sizing: border-box;
  min-height: 242rpx;
}

.book-image image {
  height: 182rpx;
  width: 182rpx;
  padding-top: 30rpx;
  padding-left: 30rpx;
}

.book-info {
  background-color: #fff;
  flex: 0 0 66%;
  box-sizing: border-box;
  height: 226rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.book-info view {
  padding-bottom: 10px;
  display: block;
  font-size: 30rpx;
  width: 80%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.line {
  background: #e0e3da;
  width: 100%;
  height: 3rpx;
  z-index: 10;
}

