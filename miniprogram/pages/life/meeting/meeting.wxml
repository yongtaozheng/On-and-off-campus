<!--miniprogram/pages/life/meeting.wxml-->
<Calendar id="Calendar" bind:select="select"></Calendar>
<view type='default' bindtap='toggleType' wx:if="{{!showmeeting}}">
      <image class="add_icon" src="../../../icon/switch1.png"></image>
</view>
<view type='default' bindtap='toggleType' wx:if="{{showmeeting}}">
      <image class="add_icon" src="../../../icon/switch.png"></image>
</view>

<view wx:if="{{showmeeting}}">
<block wx:for="{{mymeeting}}" wx:key="index" wx:if="{{selectVal==item.meetingDate}}" >
  <view class="meeting_display" data-index="{{index}}" data-Theme="{{item.meetingTheme}}" data-Date="{{item.meetingDate}}" data-Time="{{item.meetingTime}}" data-People="{{item.meetingPeople}}" data-Remark="{{item.meetingRemark}}" data-Place="{{item.meetingPlace}}" data-id="{{item._id}}" bindlongpress="notes" bindtap="showModal">
        <view id="theme" data-index="{{index}}" data-Theme="{{item.meetingTheme}}" data-Date="{{item.meetingDate}}" data-Time="{{item.meetingTime}}" data-People="{{item.meetingPeople}}" data-Remark="{{item.meetingRemark}}" data-Place="{{item.meetingPlace}}" data-id="{{item._id}}" bindlongpress="notes" bindtap="showModal">
          {{item.meetingTheme}}
        </view>
        <view data-Theme="{{item.meetingTheme}}" data-index="{{index}}" data-Date="{{item.meetingDate}}" data-Time="{{item.meetingTime}}" data-People="{{item.meetingPeople}}" data-Remark="{{item.meetingRemark}}" data-Place="{{item.meetingPlace}}" data-id="{{item._id}}" bindlongpress="notes" bindtap="showModal">
          {{item.meetingDate + ' ' + item.meetingTime}}
        </view>
        <view data-Theme="{{item.meetingTheme}}" data-index="{{index}}" data-Date="{{item.meetingDate}}" data-Time="{{item.meetingTime}}" data-People="{{item.meetingPeople}}" data-Remark="{{item.meetingRemark}}" data-Place="{{item.meetingPlace}}" data-id="{{item._id}}" bindlongpress="notes" bindtap="showModal">
          {{item.meetingPlace}}
        </view>
        <view data-Theme="{{item.meetingTheme}}" data-index="{{index}}" data-Date="{{item.meetingDate}}" data-Time="{{item.meetingTime}}" data-People="{{item.meetingPeople}}" data-Remark="{{item.meetingRemark}}" data-Place="{{item.meetingPlace}}" data-id="{{item._id}}" bindlongpress="notes" bindtap="showModal" class="tip">
          (长按查看会议笔记)
        </view>
  </view>
</block>
</view>

<view class="tabBar" wx:if="{{hiddenmodalput3}}">
    <view class="tabBar-item">
      <view bindtap="createMeeting"><image class="tabBar-icon" src="cloud://it-cloud-hdrd7.6974-it-cloud-hdrd7-1300036058/image/learn/homework/添加.png"></image></view>
      <view class="" bindtap="createMeeting">新建</view>
      <!-- <view type='default' bindtap='toggleType'>切换展示效果</view> -->
    </view>
 </view>

