<view class='row' id="textareawrap">
  <textarea wx:if="{{!show}}" class='text' bindinput="inputNote" maxlength="5000"  
  focus='{{focus}}' auto-focus="true" name="content" value="{{note}}" bindblur="showTextarea">
  </textarea> 
  <view class="text1" wx:if="{{show}}" bindtap="showTextarea">
  {{note}}
  </view>
</view>
<view class="notepics">
  <view  wx:for="{{img}}">
    <image data-index="{{index}}" bindlongtap="clear" bindtouchstart='bindTouchStart' bindtouchend='bindTouchEnd' bindtap="clickImg" mode="center" class="notepic" src = "{{item}}">
    </image>
  </view>
<view style="height:100px;width:100%"></view>
</view>


<view class="tabBar" wx:if="{{!writing}}">
<image bindtap="write" wx:if="{{!writing}}" class="modify" src="cloud://it-cloud-hdrd7.6974-it-cloud-hdrd7-1300036058/image/live/xiugai.png"></image>
<view class="box" wx:if="{{!writing}}">
  <image bindtap="saveNote" src="cloud://it-cloud-hdrd7.6974-it-cloud-hdrd7-1300036058/image/live/保存.png"></image>
  <image bindtap="cancelNote" src="cloud://it-cloud-hdrd7.6974-it-cloud-hdrd7-1300036058/image/live/取消.png"></image>
</view>
 </view>
</view>

<view class="tabBar" wx:if="{{writing}}">
<image wx:if="{{writing}}" class="camera" src="cloud://it-cloud-hdrd7.6974-it-cloud-hdrd7-1300036058/image/live/相机.png" bindtap="uploadPic"></image>
    <view class="comnote">
      <image class="comnote" src="cloud://it-cloud-hdrd7.6974-it-cloud-hdrd7-1300036058/image/live/完成.png" bindtap="compNote"></image>
    </view>
 </view>
