 <view>
  <image class="img-sandian" src="cloud://it-cloud-hdrd7.6974-it-cloud-hdrd7-1300036058/image/sport/record.png"
          bindtap="toRecord"></image>
 </view>
 <view class="mo">
 <view class="ym"> {{yy}}</view>
